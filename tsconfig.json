{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": ".",
    "noUnusedLocals": true,
    "useDefineForClassFields": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules" : {
          "no-missing-element-type-definition": "error",
          "no-unknown-event": "error"
        },
        "globalEvents": [
          "tag-tapped",
          "tag-added",
          "tag-removed",
          "tag-new",
          "show-need-signin",
          "thumbnail-tapped",
          "update-render-offset",
          "card-hovered",
          "dialog-should-close",
          "message-edit",
          "message-delete",
          "thread-resolve",
          "thread-add-message",
          "filter-modified",
          "filter-removed",
          "filter-modified-complex",
          "card-swiped",
          "disabled-card-highlight-clicked",
          "editable-card-field-updated",
          "reorder-card",
          "info-zippy-clicked",
          "add-card",
          "add-working-notes-card"
        ]
      }
    ]
  },
  "include": ["src/**/*.ts", "tools/**/*.ts"],
  "exclude": []
}